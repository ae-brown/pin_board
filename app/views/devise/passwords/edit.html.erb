
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2>Change password</h2>
      </div>

      <div class="panel-body">
          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= f.error_notification %>

            <%= f.input :reset_password_token, as: :hidden %>
            <%= f.full_error :reset_password_token %>

            <div class="form-inputs">
              <%= f.label :password %>
              <%= f.input :password, label: "New password", required: true, autofocus: true, label: false, maxlength: "30", error: false %>
              <p class='devise-alert'> <%= f.error :password %><br></p>

              <%= f.label :password_confirmation %>
              <%= f.input :password_confirmation, label: "Confirm your new password", required: true, label: false, maxlength: "30", error: false %>
              <p class='devise-alert'> <%= f.error :password_confirmation %><br></p>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Change password" %>
            </div><br>
          <% end %>

          <%= render "devise/shared/links" %>
      </div>
    </div>

  </div>
</div>

