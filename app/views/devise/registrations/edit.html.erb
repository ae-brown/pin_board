
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2>Edit <%= resource_name.to_s.humanize %></h2>
      </div>

      <div class="panel-body">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.label :name %>
          <%= f.input :name, required: true, maxlength: "30", label: false  %><br>
          <%= f.label :email %>
          <%= f.input :email, required: true, autocomplete: "off",maxlength: "30", label: false, error: false %>
          <p class='devise-alert'> <%= f.error :email %><br></p>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>

          <%= f.label :password %>
          <%= f.input :password, autocomplete: "off",  required: false, maxlength: "30", label: false,  error: false %>
          <p class='devise-alert'><%= f.error :password %></p>
          <p>leave it blank if you don't want to change password</p><br>

          <%= f.label :password_confirmation %>
          <%= f.input :password_confirmation, autocomplete: "off",required: false, label: false, maxlength: "30",  error: false %>
          <p class='devise-alert'> <%= f.error :password_confirmation %><br></p>

          <%= f.label :current_confirmation %>
          <%= f.input :current_password, autocomplete: "off", required: true, label: false, maxlength: "30", error: false  %>
          <p class='devise-alert'><%= f.error :current_confirmation %></p>

          <p>we need your current password to confirm your changes</p>

        </div><br>

        <div class="form-actions">
          <%= f.button :submit, "Update" %>
        </div>
      <% end %><br>

      <%= link_to "Back", :back %>
    </div>

</div>
  </div>
